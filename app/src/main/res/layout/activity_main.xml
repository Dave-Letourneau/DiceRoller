<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d4numBox"
        android:text="0"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_toLeftOf="@+id/rollButton"
        android:layout_toStartOf="@+id/rollButton"
        android:autoText="false"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d6numBox"
        android:text="0"
        android:layout_marginTop="38dp"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_below="@+id/d4numBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignRight="@+id/d4numBox"
        android:layout_alignEnd="@+id/d4numBox"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d8numBox"
        android:text="0"
        android:layout_marginTop="38dp"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_below="@+id/d6numBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/d6numBox"
        android:layout_alignEnd="@+id/d6numBox"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d10numBox"
        android:text="0"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_below="@+id/d8numBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_marginTop="38dp"
        android:layout_alignRight="@+id/d8numBox"
        android:layout_alignEnd="@+id/d8numBox"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d12numBox"
        android:text="0"
        android:layout_marginTop="38dp"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_below="@+id/d10numBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignRight="@+id/d10numBox"
        android:layout_alignEnd="@+id/d10numBox"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d20numBox"
        android:text="0"
        android:layout_marginTop="38dp"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_below="@+id/d12numBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignRight="@+id/d12numBox"
        android:layout_alignEnd="@+id/d12numBox"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d100numBox"
        android:text="0"
        android:layout_marginTop="38dp"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_below="@+id/d20numBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_toLeftOf="@+id/rollButton"
        android:layout_toStartOf="@+id/rollButton"
        android:textColor="#ffffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="d4"
        android:id="@+id/d4Label"
        android:layout_alignTop="@+id/d4numBox"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="d6"
        android:id="@+id/d6Label"
        android:layout_alignTop="@+id/d6numBox"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="d8"
        android:id="@+id/d8Label"
        android:layout_alignTop="@+id/d8numBox"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="d10"
        android:id="@+id/d10Label"
        android:layout_alignTop="@+id/d10numBox"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="d12"
        android:id="@+id/d12Label"
        android:layout_alignTop="@+id/d12numBox"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="d20"
        android:id="@+id/d20Label"
        android:layout_alignTop="@+id/d20numBox"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="d%"
        android:id="@+id/d100Label"
        android:layout_alignTop="@+id/d100numBox"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d4Bonus"
        android:text="0"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_above="@+id/d6numBox"
        android:layout_toLeftOf="@+id/loadButton1"
        android:layout_toStartOf="@+id/loadButton1"
        android:textColor="#ffffffff"
        android:textColorHighlight="#00ff7345" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d6Bonus"
        android:text="0"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_above="@+id/d8numBox"
        android:layout_toLeftOf="@+id/loadButton1"
        android:layout_toStartOf="@+id/loadButton1"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d8Bonus"
        android:text="0"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_above="@+id/d10numBox"
        android:layout_toLeftOf="@+id/loadButton1"
        android:layout_toStartOf="@+id/loadButton1"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d10Bonus"
        android:text="0"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_above="@+id/d12numBox"
        android:layout_toLeftOf="@+id/loadButton1"
        android:layout_toStartOf="@+id/loadButton1"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d12Bonus"
        android:text="0"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_above="@+id/d20numBox"
        android:layout_alignRight="@+id/d10Bonus"
        android:layout_alignEnd="@+id/d10Bonus"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d20Bonus"
        android:text="0"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_above="@+id/d100numBox"
        android:layout_toLeftOf="@+id/loadButton1"
        android:layout_toStartOf="@+id/loadButton1"
        android:textColor="#ffffffff" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d100Bonus"
        android:text="0"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_alignBottom="@+id/d100numBox"
        android:layout_alignRight="@+id/d20Bonus"
        android:layout_alignEnd="@+id/d20Bonus"
        android:textColor="#ffffffff" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="ROLL DICE"
        android:id="@+id/rollButton"
        android:layout_below="@+id/d100numBox"
        android:layout_toLeftOf="@+id/d8Label"
        android:layout_toStartOf="@+id/d8Label"
        android:onClick="buttonOnClick" />

    <Button
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="SAVE ROLL"
        android:id="@+id/saveButton1"
        android:layout_alignTop="@+id/rollButton"
        android:layout_toRightOf="@+id/d8Label"
        android:layout_toEndOf="@+id/d8Label"
        android:onClick="buttonOnClick" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOAD ROLL"
        android:id="@+id/loadButton1"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:onClick="buttonOnClick" />

</RelativeLayout>
