<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d4numBox"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignRight="@+id/d10numBox"
        android:layout_alignEnd="@+id/d10numBox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d6numBox"
        android:layout_marginTop="38dp"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_below="@+id/d4numBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/d4numBox"
        android:layout_alignEnd="@+id/d4numBox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d8numBox"
        android:layout_marginTop="38dp"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_below="@+id/d6numBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/d6numBox"
        android:layout_alignEnd="@+id/d6numBox" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d10numBox"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_below="@+id/d8numBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="38dp"
        android:layout_alignRight="@+id/d12numBox"
        android:layout_alignEnd="@+id/d12numBox" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d12numBox"
        android:layout_marginTop="38dp"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_below="@+id/d10numBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false"
        android:layout_alignRight="@+id/d20numBox"
        android:layout_alignEnd="@+id/d20numBox" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d20numBox"
        android:layout_marginTop="38dp"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_below="@+id/d12numBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/d100numBox"
        android:layout_marginTop="38dp"
        android:backgroundTint="#ff646464"
        android:background="#ff000000"
        android:layout_below="@+id/d20numBox"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="d4"
        android:id="@+id/textView"
        android:layout_alignTop="@+id/d4numBox"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="d6"
        android:id="@+id/textView2"
        android:layout_alignTop="@+id/d6numBox"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="d8"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/d8numBox"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="d10"
        android:id="@+id/textView4"
        android:layout_alignTop="@+id/d10numBox"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="d12"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/d12numBox"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="d20"
        android:id="@+id/textView6"
        android:layout_alignTop="@+id/d20numBox"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="d%"
        android:id="@+id/textView7"
        android:layout_alignTop="@+id/d100numBox"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
